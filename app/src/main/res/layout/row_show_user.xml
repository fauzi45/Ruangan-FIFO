<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recShow"
    android:orientation="vertical"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/recShowProf"
            android:layout_marginStart="20dp"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person_gray"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recShowTitle"
            android:text="Title"
            android:textColor="@color/lavender"
            android:textSize="20dp"
            android:layout_toEndOf="@id/recShowProf"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recShowId"
            android:maxLines="0"
            android:text="Title"
            android:textColor="@color/lavender"
            android:textSize="20dp"
            android:layout_toEndOf="@id/recShowProf"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recShowEmail"
            android:maxLines="0"
            android:text="Title"
            android:textColor="@color/lavender"
            android:textSize="20dp"
            android:layout_toEndOf="@id/recShowProf"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:id="@+id/recShowUserType"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/recShowTitle"
            android:text="Sekretaris Jurusan"
            android:textColor="@color/lavender"
            android:textSize="15dp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>